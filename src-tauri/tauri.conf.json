{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "an8nymous Stats",
  "version": "1.0.0",
  "identifier": "com.an8nymous.stats",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "overlay",
        "title": "an8nymous Stats",
        "url": "overlay.html",
        "width": 700,
        "height": 30,
        "x": 1200,
        "y": 15,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/an8nymous.png",
      "tooltip": "an8nymous Stats"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/an8nymous.ico",
      "icons/an8nymous.png"
    ]
  }
}
